{% block nipa_user_content %}
    <div class="container" role="tabpanel">    
        <br> 
        <div class="row">
            <div class="col-md-3">
                <center><h4><span class="glyphicon glyphicon-folder-open"></span> Demandes >> Liste</h4></center>
            </div>
            <div class="col-md-9">
               <ul class="nav nav-tabs nav-justified demande" role="tablist">
                    <li role="presentation" class="active">
                        <a href="#infos" aria-controls="infos" role="tab" data-toggle="tab"><i class="fa fa-info-circle fa-fw"></i> Informations</a>
                    </li>
                    
                {% if demande.referenceDemande %}                
                    <li role="presentation">
                        <a href="#description" aria-controls="enjeux" role="tab" data-toggle="tab"><i class="fa fa-pencil-square fa-fw"></i> Description</a>
                    </li>                    <li role="presentation">
                        <a href="#projets" aria-controls="projets" role="tab" data-toggle="tab"><i class="fa fa-list-alt fa-fw"></i> P&P</a>
                    </li>                    
                    <li role="presentation">
                        <a href="#budget" aria-controls="budget" role="tab" data-toggle="tab"><i class="fa fa-dollar fa-fw"></i> Budget</a>
                    </li>
                    <li role="presentation">
                        <a href="#instances" aria-controls="instances" role="tab" data-toggle="tab"><i class="fa fa-users fa-fw"></i> Instances</a>
                    </li> 
                    
                {% endif %}
                
                </ul>                           
            </div>
        </div>  
        <br>        
        <div class="tab-content row">
            <div class="col-md-3">
                {% include "NIPAProjetBundle:Demande:demande_content.html.twig" %}                
            </div>
            
            <div role="tabpanel" class="col-md-9 well tab-pane active" id="infos">
                {% include "NIPAProjetBundle:Demande:demande_content_gen.html.twig" %}
            </div>
            
            <div role="tabpanel" class="col-md-9 well tab-pane" id="description">
                {% include "NIPAProjetBundle:Demande:demande_content_description.html.twig" %}
            </div>
            
            <div role="tabpanel" class="col-md-9 well tab-pane" id="projets">
                {% include "NIPAProjetBundle:Demande:demande_content_projet.html.twig" %}
            </div>

            <div role="tabpanel" class="col-md-9 well tab-pane" id="budget">
                {% include "NIPAProjetBundle:Demande:demande_content_budget.html.twig" %}                
            </div> 

            <div role="tabpanel" class="col-md-9 well tab-pane" id="instances">
                {% include "NIPAProjetBundle:Demande:demande_content_instance.html.twig" %}                
            </div>               
        </div>
    </div>
 
                
    <script>
        var url = document.location.toString();
        if (url.match('#')) {
          $('.demande a[href=#'+url.split('#')[1]+']').tab('show') ;
        }        
    </script>                
{% endblock nipa_user_content %}