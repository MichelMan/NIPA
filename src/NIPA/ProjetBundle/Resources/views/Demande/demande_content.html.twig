                                {# {% endif %}    #}
                                        <ul>
                                            {% for de in listDemande %} {# Puis on positionne chaque DE dans le bon chemin #}   
                                                {% for pf2De in de.getPortefeuillesToArray() %}
                                                    {% if (pf2De.getReferencePortefeuille() ==  pf.getReferencePortefeuille()) %}    
